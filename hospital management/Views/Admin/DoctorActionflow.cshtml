@model List<DataAccessLayer.patientdata>
@{
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DoctorActionflow</title>
</head>
<body>
    <div> 
        <h3>Appointment ActionFlow </h3>
    </div>
    <table border="1">
        <tr>
            <th>
                Appointment Id
            </th>
            <th>
                Description
            </th>
            <th>
                Doctor Id
            </th>
            <th>
                Login Id
            </th>
            <th>
                Payment Status
            </th>
            <th>
                Prescription
            </th>
            <th>
                Slot
            </th>
            <th>
                Status
            </th>
            <th>
                Timing
            </th>
        </tr>
        @{ 
            foreach(var i in Model)
            {
                <tr>
                    <td>
                        @i.AppointmentId
                    </td>
                    <td>
                        @i.Description
                    </td>
                    <td>
                        @i.DoctorId
                    </td>
                    <td>
                        @i.LoginId
                    </td>
                    <td>
                        @i.Pay
                    </td>
                    <td>
                        @i.Prescription
                    </td>
                    <td>
                        @i.Slot
                    </td>
                    <td>
                        @i.Status
                    </td>
                    <td>
                        @i.Timings
                    </td>
                    <td>
                        <a href="~/Admin/appointmenthistory?appid=@i.AppointmentId">click here to view history</a>
                    </td>
                </tr>
            }
        }
    </table>
    
</body>
</html>
