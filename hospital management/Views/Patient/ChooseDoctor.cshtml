@model List<DataAccessLayer.choosedocdata>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChooseDoctor</title>
</head>
<body>
    <div>
        <h2>choose doctor</h2>
        <table>
            <tr>Doctor Name</tr>
            <tr>Address </tr>
            <tr>Phone Number </tr>
            <tr>Status</tr>
            <tr>Add Appointment</tr>


            @{
                foreach (var i in Model)
                {
                    <tr>
                        <td>@i.DoctorName</td>
                        <td>@i.Address</td>
                        <td>@i.MobileNumber</td>
                        <td><a href="~/Patient/Appointment?docid=@i.DoctorId">Click Here</a></td>


                    </tr>
                }
            }
        </table>
        <span> <a href="~/Patient/PatientDashboard"> New problem  </a> </span>
    </div>
</body>
</html>
