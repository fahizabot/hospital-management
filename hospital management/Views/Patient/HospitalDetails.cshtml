@model List<DataAccessLayer.hospitaldata>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HospitalDetails</title>
</head>
<body>
    <div>
        <h2>hosp details</h2>

        <table border="1">
            <tr> 
            <td><p>Hospital Name</p></td>
            <td><p>Address </p></td>
            <td><p>Phone Number </p></td>
            <td><p>Choose Doctor</p></td>
            </tr>
            @{
                foreach (var i in Model)
                {
                        <tr>
                            <td>@i.hospitalName</td>
                            <td>@i.Address</td>
                            <td>@i.MobileNumber</td>
                            <td><a href="~/Patient/ChooseDoctor?hpid=@i.hospitalId">Click Here</a></td>

                            
                        </tr>
                }
            }
        </table>
    </div>
</body>
</html>
